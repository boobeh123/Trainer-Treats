            <input type="text" placeholder="Stretch name" name="stretchName">
            <input type="text" placeholder="Difficulty" name="stretchDiff">
            <input type="text" placeholder="Directions" name="stretchDir">
            <input type="submit">
        </form>
        <h2>Stretches currently in the database: <%= left %></h2>
    </section>
    </div>
    <div class="row">
        <div class="grid">
            <section class="content">
                <p>WHAT WOULD YOU LIKE TO STRETCH TODAY?</p>
                <li class="show-modal">
