                        <p>Lats</p>
                    </button>
                    <button class="body-buttons">
                        <i class="fas fa-crow fa-2xl"></i>
                        <p>Abdominal</p>
                    </button>
                    <button class="body-buttons">
                        <i class="fas fa-horse fa-2xl"></i>
                        <p>Lowerback</p>
                    </button>
                    <button class="body-buttons">
                        <i class="fas fa-hippo fa-2xl"></i>
                        <p>Glutes</p> 
                    </button>
                    <button class="body-buttons">
                        <i class="fas fa-frog fa-2xl"></i>
                        <p>Quadriceps</p> 
                    </button>
                    <button class="body-buttons">
                        <i class="fas fa-dragon fa-2xl"></i>
                        <p>Hamstrings</p> 
                    </button>
                </li>

                <div class="modal hidden">
                    <h3>Stretch name</h3>
                    <h3>Muscle name</h3>
                    <h3>Difficulty</h3>
                    <h3>Instructions</h3>
        
                    <img
                      class="surprise-image"
                      src=""
                      alt="Photo-of-stretch"
                    />
                    
                    <div>
                        <button class="more-modal">More!</button>
                    </div>
                    <div>
                        <button class="close-modal">&times;</button>
                    </div>
                </div>
                <div class="overlay hidden"></div>
            </section>
